<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:padding="8dp"
    android:layout_marginTop="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_height="wrap_content"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/productImageView"
        android:layout_width="150dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="150dp"
        android:background="@drawable/pierreperson"
        android:layout_marginLeft="8dp"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.SelectedCornerRadius2"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="16dp"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_height="wrap_content"
            android:text="Bang thiet ke tuong"
            android:maxLines="1"
            android:textSize="17sp"
            android:textColor="@color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/primary"
            android:text="$20"
            android:textSize="20sp"
            android:layout_marginTop="4dp"/>

        <LinearLayout
            android:id="@+id/addLayout"
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/totalCostTextView"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:padding="12dp"
                android:background="@drawable/bg_add_detail"
                android:src="@drawable/ic_minus_sign"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="5"
                android:textSize="17sp"
                android:layout_gravity="center_vertical"
                android:textColor="@color/black"
                android:paddingHorizontal="16dp"
                android:background="@drawable/bg_add_detail"/>

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:padding="12dp"
                android:background="@drawable/bg_add_detail"
                android:src="@drawable/ic_plus"/>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>